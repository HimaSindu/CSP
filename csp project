  <script>
    document.getElementById('fundraiserForm').addEventListener('submit', function(event) {
      event.preventDefault();

      const submission = {
        firstName: document.getElementById('firstName').value,
        lastName: document.getElementById('lastName').value,
        email: document.getElementById('email').value,
        phone: document.getElementById('phone').value,
        items: document.getElementById('items').value
      };

      let submissions = JSON.parse(localStorage.getItem('fundraiserSubmissions') || '[]');
      submissions.push(submission);
      localStorage.setItem('fundraiserSubmissions', JSON.stringify(submissions));

      const notification = document.getElementById('notification');
      notification.style.display = 'block';

      setTimeout(() => {
        notification.style.display = 'none';
        document.getElementById('fundraiserForm').reset();
      }, 2000);
    });
  </script>
